<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up"
    app:startDestination="@id/signUpStep1Fragment">

    <fragment
        android:id="@+id/signUpStep1Fragment"
        android:name="com.spectrum.spectrum.src.activities.signup.fragments.step1.Step1Fragment"
        android:label="Step1Fragment" >
        <action
            android:id="@+id/step1_to_step2"
            app:destination="@id/signUpStep2Fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/signUpStep2Fragment"
        android:name="com.spectrum.spectrum.src.activities.signup.fragments.step2.Step2Fragment"
        android:label="Step2Fragment" >
        <action
            android:id="@+id/step2_to_step3"
            app:destination="@id/signUpStep3Fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/signUpStep3Fragment"
        android:name="com.spectrum.spectrum.src.activities.signup.fragments.step3.Step3Fragment"
        android:label="Step3Fragment" />

</navigation>