<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/password"
    app:startDestination="@id/passwordStep1">

    <fragment
        android:id="@+id/passwordStep1"
        android:name="com.spectrum.spectrum.src.activities.password.fragments.step1.Step1Fragment"
        android:label="Step1" >
        <action
            android:id="@+id/step1_to_step2"
            app:destination="@id/passwordStep2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/passwordStep2"
        android:name="com.spectrum.spectrum.src.activities.password.fragments.step2.Step2Fragment"
        android:label="Step2" >
        <action
            android:id="@+id/step2_to_step3"
            app:destination="@id/passwordStep3"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/passwordStep3"
        android:name="com.spectrum.spectrum.src.activities.password.fragments.step3.Step3Fragment"
        android:label="Step3" />
</navigation>