<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="java.util.ArrayList"/>
        <import type="com.spectrum.spectrum.src.models.Company"/>
        <import type="com.spectrum.spectrum.src.models.Duty"/>
        <variable
            name="title"
            type="String" />
        <variable
            name="watcherCount"
            type="Integer" />
        <variable
            name="duties"
            type="ArrayList&lt;Duty&gt;" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_double_margin">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@{title}"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/watcher_image"/>

            <ImageView
                android:id="@+id/watcher_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_person"
                app:layout_constraintBottom_toBottomOf="@id/title_text"
                app:layout_constraintStart_toEndOf="@id/title_text"
                app:layout_constraintTop_toTopOf="@id/title_text" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/default_half_margin"
                android:fontFamily="@font/roboto_medium"
                android:text="@{watcherCount.toString()}"
                android:textColor="@color/spectrumGray2"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/title_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/watcher_image"
                app:layout_constraintTop_toTopOf="@id/title_text" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/duties_chips"
                company_duties="@{duties}"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/default_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>