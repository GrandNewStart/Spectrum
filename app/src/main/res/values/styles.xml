<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style
        name="AppTheme"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/spectrumBlue</item>
        <item name="colorPrimaryDark">@color/spectrumBlue</item>
        <item name="colorAccent">@color/spectrumGray1</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="radioButtonStyle">@style/CustomRadioButton</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <style name="BottomSheetDialog"
        parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/clear</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>
    
    <style 
        name="CustomTextView"
        parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChipTextSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/spectrumGray3</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ChipTextBig">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/spectrumGray3</item>
        <item name="android:textSize">12sp</item>
    </style>

   <style
       name="UnderLineEditText"
       parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/edit_text_underline</item>
       <item name="hintTextAppearance">@style/HintTextAppearance</item>
   </style>

    <style name="HintTextAppearance">
        <item name="android:textColorHint">@color/spectrumGray1</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style
        name="RoundedClearButton"
        parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/button_blue_gray</item>
        <item name="rippleColor">@color/clearGray</item>
        <item name="android:textColor">@color/button_blue_gray</item>
        <item name="cornerRadius">25dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style
        name="RoundedSolidButton"
        parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_blue_gray</item>
        <item name="rippleColor">@color/clearGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style
        name="BlueChip"
        parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/spectrumBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="chipIconEnabled">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="closeIconEnabled">true</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style
        name="GreenChip"
        parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/spectrumGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="chipIconEnabled">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="closeIconEnabled">true</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style
        name="OrangeChip"
        parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/spectrumOrange</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="chipIconEnabled">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="closeIconEnabled">true</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style
        name="OutlineChip"
        parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/clear</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="chipIconEnabled">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="closeIconEnabled">true</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/blue_gray</item>
        <item name="chipMinHeight">30dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style
        name="CustomChip"
        parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/clear_light_blue</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStrokeColor">@color/silver_light_blue</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="chipMinHeight">28dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DefaultChip"
        parent="Widget.MaterialComponents.Chip.Action">
        <item name="minTouchTargetSize">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ResponseChip"
        parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/clear_light_blue</item>
        <item name="android:textColor">@color/silver_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/silver_light_blue</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="CustomRadioButton"
        parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button</item>
        <item name="buttonTint">@color/radio_button_color</item>
    </style>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>